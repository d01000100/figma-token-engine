{
  "include": ["src", "bin"],
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "rootDir": "src",
    "module": "commonjs",
    "outDir": "build",
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  },
  "exclude": ["node_modules", "build", "test", "bin"],
}
